{
  "name": "proxy-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",          // base image
  "features": {
    "ghcr.io/devcontainers/features/node:1": "latest"             // Node for React dashboard
  },
  "postCreateCommand": "pip install -r requirements.txt -r requirements-dev.txt && pre-commit install",
  "forwardPorts": [8000],                                          // uvicorn, vite, etc.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "github.copilot",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
